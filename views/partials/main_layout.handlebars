<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="noindex, nofollow" />

  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  
  <title>{{title}}</title>
  <script src="/scripts/util.js"></script>
  {{> head_scripts}}
</head>

<body>
  <div class="d-flex flex-column align-self-stretch min-vh-100">
    <div id="body" class="flex-fill">
      {{> body}}
    </div>
    <div class="mt-auto">
      <div class="container-fluid">
        <div class="row mt-3">
          <div class="col text-center">
            {{#if user}}
            <a href="/profile">@{{user.username}}</a> [<a href="/logout">Sign out</a>]
            {{/if}}
          </div>
        </div>
        <div class="row mb-3">
          <div class="col text-center">
            <small>
              <a href="https://github.com/twistedstream/skattlada" target="_blank">{{ product }}</a>, v{{version}}</small>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
  {{> body_scripts }}
</body>
